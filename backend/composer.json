{
  "name": "rodri/voting-app",
  "description": "Voting app backend api",
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Rodri\\VotingApp\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Rod1Andrade",
      "email": "rodrigopires.profissional@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.0",
    "rodri/simple-router": "v1.3.3-alpha",
    "ext-pdo": "*",
    "vlucas/phpdotenv": "^5.3",
    "ramsey/uuid": "*",
    "firebase/php-jwt": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpunit/php-code-coverage": "*",
    "ext-http": "*"
  },
  "scripts": {
    "test": "php -dxdebug.mode=coverage vendor/bin/phpunit tests/ --coverage-html cover/ --colors=always",
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8000 -t public"
    ]
  },
  "scripts-descriptions": {
    "test": "Run the php unit tests with cover",
    "dev": "Run the development Server"
  }
}
